<%- include('../../layouts/ejs/head') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <%- include('../../layouts/ejs/navigation') %>
    <main>
        <% if (orders.length <= 0) { %>
            <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1># <%= mongo ? order._id : order.id %></h1>
                            <ul class="orders__products">
                                <% order.products.forEach(product => { %>
                                    <li class="orders__products-item"><%= product.title %> (<%= mongo ? product.quantity : product.orderItem.quantity %>)</li>
                                    <% }) %>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
                <% } %>
    </main>
    <%- include('../../layouts/ejs/end') %>