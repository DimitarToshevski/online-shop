<%- include('../../layouts/ejs/head') %>
</head>

<body>
    <%- include('../../layouts/ejs/navigation') %>
    <main>
        <% if (products.length > 0) { %>
            <ul>
                <% products.forEach((product)=>{ %>
                    <li><%= product.productData.title %> (<%= product.quantity %>)</li>
                <% }) %>
            </ul>
        <% } else { %>
            <h1>No products in Cart!</h1>
        <% } %>
    </main>
    <%- include('../../layouts/ejs/end') %>